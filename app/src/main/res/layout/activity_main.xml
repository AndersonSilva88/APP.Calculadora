<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:text=""/>

   <TextView
       android:id="@+id/result"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:textColor="@color/white"
       android:textSize="30sp"
       android:layout_marginEnd="10dp"
       android:gravity="end"
       android:maxLines="1"
       android:ellipsize="end"/>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/limpa"
        style="@style/Operation_Button"
        android:text="C" />
    <TextView
        android:id="@+id/divisao"
        style="@style/Operation_Button"
        android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_sete"
            style="@style/Numbers_Button"
            android:text="7"/>
        <TextView
            android:id="@+id/numero_oito"
            style="@style/Numbers_Button"
            android:text="8"/>
        <TextView
            android:id="@+id/numero_nove"
            style="@style/Numbers_Button"
            android:text="9"/>
        <TextView
            android:id="@+id/multiplicacao"
            style="@style/Operation_Button"
            android:text="X"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_quatro"
            style="@style/Numbers_Button"
            android:text="4"/>
        <TextView
            android:id="@+id/numero_cinco"
            style="@style/Numbers_Button"
            android:text="5"/>
        <TextView
            android:id="@+id/numero_seis"
            style="@style/Numbers_Button"
            android:text="6"/>
        <TextView
            android:id="@+id/subtracao"
            style="@style/Operation_Button"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_um"
            style="@style/Numbers_Button"
            android:text="1"/>
        <TextView
            android:id="@+id/numero_dois"
            style="@style/Numbers_Button"
            android:text="2"/>
        <TextView
            android:id="@+id/numero_tres"
            style="@style/Numbers_Button"
            android:text="3"/>
        <TextView
            android:id="@+id/adicao"
            style="@style/Operation_Button"
            android:text="+"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="1">

    <TextView
        android:id="@+id/numero_ponto"
        style="@style/Numbers_Button"
        android:text="."/>
    <TextView
        android:id="@+id/numero_zero"
        style="@style/Numbers_Button"
        android:text="0"/>
    <ImageView
        android:id="@+id/backspace"
        style="@style/Numbers_Button"
        android:src="@drawable/backspace2"
        android:scaleType="center"/>


    <TextView
        android:id="@+id/igual"
        style="@style/Operation_Button"
        android:text="="/>


 </LinearLayout>
</LinearLayout>


